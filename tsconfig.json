{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ],
      "~~/*": [
        "./*"
      ],
      "@@/*": [
        "./*"
      ],
    },
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "ES6",
    "verbatimModuleSyntax": false,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
}